/* componment/oblongProduct/oblongProduct.wxss */

.box {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.product-discreption {
  margin-left: 30rpx;
  flex: 1;
}

.product-discreption .product-discreption__box {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.product-discreption .share-icon {
  height: auto;
  width: auto;
  vertical-align: middle;
  margin-right: 10rpx;
}

.product-discreption .share {
  padding: 6rpx;
  background: linear-gradient(270deg, rgba(254, 141, 24, 1) 0%, rgba(255, 178, 32, 1) 100%);
  border-radius: 14rpx;
  font-size: 20rpx;
  color: rgba(255, 254, 254, 1);
  line-height: 20rpx;
}

.free-freight__icon {
  width: 50rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.product-discreption__text {
  vertical-align: middle;
}
