/* componment/zhengFangBig/zhengFangBig.wxss */

.store-product__item {
  width: 330rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.store-product__item .product-discription {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 22rpx;
  margin: 20rpx;
}

.store-product__item .product-photo {
  height: 330rpx;
  width: 330rpx;
}

.store-product__item .product-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 20rpx 20rpx;
}

.store-product__item .product-price .left {
  font-size: 22rpx;
  color: rgba(255, 166, 81, 1);
}

.store-product__item .product-price .right {
  font-size: 20rpx;
  color: rgba(153, 153, 153, 1);
}
