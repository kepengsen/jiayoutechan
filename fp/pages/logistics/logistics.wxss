/* pages/logistics/logistics.wxss */

.logistics-page .product-info {
  background-color: white;
  padding: 30rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  text-align: center;
}

.logistics-page .product-info .product-photo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 50rpx;
}

.logistics-page .logistics-number {
  padding: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 25rpx;
}

.logistics-page .logistics-number .left {
  margin-right: 114rpx;
}

.logistics-page .logistics-number .logistics-name {
  color: rgba(51, 51, 51, 1);
}

.logistics-number .number-list {
  color: rgba(153, 153, 153, 1);
  margin-left: 86rpx;
}

.logistics-number .bottom {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  margin-top: 30rpx;
}

.logistics-page .logistics-detail {
  padding: 80rpx 30rpx;
  background-color: white;
}

.logistics-page  .new-infomation__box {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: 12rpx;
}

.logistics-page  .new-infomation__box .left {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.new-infomation__box .left .line {
  height: 123rpx;
  border-left: 1rpx dashed rgba(221, 221, 221, 1);
  /* margin-bottom: 16rpx; */
}

.logistics-page  .new-infomation__box .right {
  flex: 1;
  margin-left: 18rpx;
}

.logistics-page  .new-infomation__box .right .time {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 25rpx;
}

.logistics-page  .new-infomation__box .right .loaction {
  font-size: 26rpx;
  color: rgba(171, 171, 171, 1);
  line-height: 40rpx;
  margin-top: 20rpx;
}

.logistics-page  .new-infomation__box .new-infomation__icon {
  width: 46rpx;
  height: 52rpx;
}

.logistics-page  .new-infomation__box .old-infomation__icon {
  width: 20rpx;
  height: 20rpx;
  padding: 12rpx;
}

.shim {
  height: 100rpx;
}
