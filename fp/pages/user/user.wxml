<!--pages/user/user.wxml-->
<view class="container user">
  <!-- 头部信息 -->
  <view class="user-info__box">
    <image class="user-avatar" src="../../images/active.jpg"></image>
    <view>
      <view class="user-name__box">
        <text class="user-name">不问归期不负遇见</text>
        <view class="vip-icon">Lv.1</view>
      </view>
      <view class="bottom">
        <image class="xin-icon" src="../../images/active.jpg"></image>
        <text class="xin-icon__count">爱心贡献值1366 ></text>
      </view>
    </view>
    <image class="user-seting__btn" src="../../images/active.jpg"></image>
  </view>

  <!-- 订单部分 -->
  <view class="order-box">
    <view class="top">
      <text>我的订单</text>
      <text>查看全部订单 ></text>
    </view>
    <view class="bottom">
      <view class="order-item">
        <image class="dai-zhi__fu--icon" src="../../images/active.jpg"></image>
        <view class="dai-zhi__fu--text">待支付</view>
      </view>
      <view class="order-item">
        <image class="dai-zhi__fu--icon" src="../../images/active.jpg"></image>
        <view class="dai-zhi__fu--text">待发货</view>
      </view>
      <view class="order-item">
        <image class="dai-zhi__fu--icon" src="../../images/active.jpg"></image>
        <view class="dai-zhi__fu--text">待收货</view>
      </view>
      <view class="order-item">
        <image class="dai-zhi__fu--icon" src="../../images/active.jpg"></image>
        <view class="dai-zhi__fu--text">待评价</view>
      </view>
      <view class="order-item">
        <image class="dai-zhi__fu--icon" src="../../images/active.jpg"></image>
        <view class="dai-zhi__fu--text">已完成</view>
      </view>
    </view>
  </view>

  <!-- 列表项目 -->
  <view class="other-list" wx:for="{{pickList}}" wx:key="{{index}}">
    <text>{{item.name}}</text>
    <image class="jian-tou" src="../../images/active.jpg"></image>
  </view>

  <!-- 垫片 -->
  <view class="shim"></view>

</view>