<!--pages/invitation/invitation.wxml-->
<view class="container invitation">
  <view class="title">
    <view wx:for="{{['头像','昵称','来源','日期']}}" wx:key="{{index}}">{{item}}</view>
  </view>
  <view class="title list-box" wx:for="{{12}}">
    <view class="item">
      <image class="avatar" src="../../images/active.jpg"></image>
    </view>
    <view class="item">
      <text class="name">京城吴彦祖</text>
    </view>
    <view class="item">
      <text class="from">名片扫码</text>
    </view>
    <view class="item">
      <text class="time">2019.2.15</text>
    </view>
  </view>

  <form class="share-box">
    <button class="share">邀请好友</button>
  </form>

  <view class="shim"></view>
  <view class="shim"></view>
  <view class="shim"></view>

</view>