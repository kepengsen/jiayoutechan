/* pages/invitation/invitation.wxss */

.invitation .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  height: 73rpx;
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 26rpx;
}

.invitation .title .avatar {
  height: 88rpx;
  width: 88rpx;
  border-radius: 50%;
}

.invitation .title.list-box {
  background-color: white;
  height: 144rpx;
  border-top: 1rpx solid #f8f8f8;
}

.invitation .title .item {
  flex: 1;
  text-align: center;
}

.invitation .title .name {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.invitation .title .from {
  font-size: 28rpx;
  color: rgba(254, 144, 25, 1);
  line-height: 28rpx;
}

.invitation .title .time {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 22rpx;
}

.share-box {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  padding: 30rpx 0;
  background: rgba(255, 255, 255, 1);
}

.share {
  width: 600rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: linear-gradient(89deg, rgba(253, 179, 32, 1) 0%, rgba(254, 141, 22, 1) 100%);
  border-radius: 44rpx;
  font-size: 30rpx;
  color: rgba(254, 254, 254, 1);
  margin: 0 auto;
}

.invitation .share-my__mark {
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
  z-index: 2;
  background-color: white;
}

.invitation .my-mark__photo {
  height: 100%;
  width: 100%;
}

.invitation .share-my__mark .handle-btn {
  position: absolute;
  z-index: 2;
  bottom: 10vh;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.invitation .share-my__mark .handle-btn .left,
.invitation .share-my__mark .handle-btn .right {
  width: 257rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.invitation .share-my__mark .handle-btn .left {
  background: rgba(254, 142, 23, 1);
  color: white;
}

.invitation .share-my__mark .handle-btn .right {
  border: 2rpx solid rgba(239, 147, 2, 1);
  color: rgba(254, 142, 23, 1);
}
