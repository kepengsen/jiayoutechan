/* pages/store/store.wxss */

/* 店铺信息S */

.store-page .store-info {
  margin-bottom: 10rpx;
}

.store-page .store-info .tiao-box__left.store-avatar {
  height: 120rpx;
  width: 120rpx;
}

.store-page .store-info .tiao-box__right {
  position: relative;
  display: flex;
  flex-direction: row;
}

.store-page .store-info .tiao-box__right .like-share__icon.share-btn,
.store-page .store-info .tiao-box__right .like-share__icon {
  height: 50rpx;
  width: 50rpx;
}

.store-page .store-info .tiao-box__right .margin-right--30rpx {
  margin-right: 30rpx;
}

.store-page .tiao-box__middle .store-name {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
}

.store-page .tiao-box__middle .store-function {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
  margin: 12rpx 0 18rpx;
}

.store-page .tiao-box__middle .store-fans {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 22rpx;
}

/* 店铺信息E */

/* 产品S */

.store-product {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.store-product .store-product__item {
  width: 330rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.store-product .store-product__item .product-discription {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 22rpx;
  margin: 20rpx;
}

.store-product .store-product__item .product-photo {
  height: 330rpx;
  width: 330rpx;
}

.store-product .store-product__item .product-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 20rpx 20rpx;
}

.store-product .store-product__item .product-price .left {
  font-size: 22rpx;
  color: rgba(255, 166, 81, 1);
}

.store-product .store-product__item .product-price .right {
  font-size: 20rpx;
  color: rgba(153, 153, 153, 1);
}

/* 产品E */

.store-page .store-info .tiao-box__right .like-share__icon.share-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
}
