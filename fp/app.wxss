/* 行数控制s */

.one-line__text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.two-line__text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

